<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookdetails"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/lay_c1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="21dp"
            android:layout_height="25dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_v9">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="20dp"
                android:src="@drawable/ic_v1">

            </ImageView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/lay_c1"
        android:id="@+id/lay_c2"
        android:background="#A0D0D8"
        android:orientation="horizontal">

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay_c2"
        android:scrollbarThumbVertical="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_c2"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay_c4"
                android:layout_width="350dp"
                android:layout_height="320dp"
                android:layout_below="@id/lay_c2"
                android:layout_margin="20dp"
                android:background="@drawable/c5"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Light_blue"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:fontFamily="@font/fira_sans_semibold"
                            android:text="Play Trail"
                            android:textColor="@color/white">

                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/fira_sans_semibold"
                        android:gravity="center"
                        android:text="|"
                        android:textColor="@color/white"></TextView>

                    <LinearLayout
                        android:id="@+id/playnow"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:fontFamily="@font/fira_sans_semibold"
                            android:text="Play Now"
                            android:textColor="@color/white">

                        </TextView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_c5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay_c4"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_v21"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/fira_sans_semibold"
                    android:text="Educated"
                    android:textColor="@color/half_black">

                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans_semibold"
                        android:text="Written by:"
                        android:textColor="@color/half_black"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans"
                        android:text="   Tara Westover"
                        android:textColor="@color/half_black"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans_semibold"
                        android:text="Narrated by:"
                        android:textColor="@color/half_black"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans"
                        android:text="   Jaanish Ali"
                        android:textColor="@color/half_black"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans_semibold"
                        android:text="Duration:"
                        android:textColor="@color/half_black"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans"
                        android:text="   23 hrs 30 mins"
                        android:textColor="@color/half_black"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans_semibold"
                        android:text="Released on:"
                        android:textColor="@color/half_black"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans"
                        android:text="   22 Nov 20"
                        android:textColor="@color/half_black"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans_semibold"
                        android:text="Language:"
                        android:textColor="@color/half_black"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans"
                        android:text="   English"
                        android:textColor="@color/half_black"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans_semibold"
                        android:text="Publisher:"
                        android:textColor="@color/half_black"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans"
                        android:text="   Boston Globe"
                        android:textColor="@color/half_black"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans_semibold"
                        android:text="Categories:"
                        android:textColor="@color/half_black"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans"
                        android:text="   Category1,category2"
                        android:textColor="@color/half_black"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans_semibold"
                        android:text="Ratings:"
                        android:textColor="@color/half_black"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans"
                        android:text="   4.9(out of 5)"
                        android:textColor="@color/half_black"></TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/light_blue_bg2"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_v20"

                        ></ImageView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:background="@drawable/light_blue_bg2"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_v22"></ImageView>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/fira_sans_semibold"
                android:text="Publisher's Summary"
                android:textColor="@color/half_black"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:fontFamily="@font/fira_sans"
                android:text="Tara Westover is an American author living in the UK. Born in Idaho to a father opposed to public education, she never attended school. She spent her days working in her father's junkyard or stewing herbs for her mother, a self-taught herbalist and midwife. She was seventeen the first time she set foot in a classroom, and after that first taste, she pursued learning for a decade. She graduated magna cum laude from Brigham Young University in 2008 and was subsequently awarded a Gates Cambridge Scholarship. She earned an MPhil from Trinity College, Cambridge in 2009, and in 2010 was a visiting fellow at Harvard University. She returned to Cambridge, where she was awarded a PhD in history in 2014."
                android:textColor="@color/half_black"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/fira_sans_semibold"
                    android:text="See More like this"
                    android:textColor="@color/half_black">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_v10">

                    </ImageView>
                </LinearLayout>
            </LinearLayout>


            <HorizontalScrollView
                android:id="@+id/lay3_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay2"
                android:scrollbarThumbHorizontal="@null">

                <LinearLayout
                    android:id="@+id/lay3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lay2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/books"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lay2"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="160dp"
                            android:src="@drawable/c6"></ImageView>

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="160dp"
                            android:src="@drawable/c7"></ImageView>

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="160dp"
                            android:src="@drawable/book10"></ImageView>

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="160dp"
                            android:src="@drawable/book3"></ImageView>

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="160dp"
                            android:src="@drawable/book4"></ImageView>

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="160dp"
                            android:src="@drawable/book1"></ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bookname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/books"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fira_sans"
                            android:text="The Courtesan's Pawn\nby Kingsley Slater"
                            android:textColor="@color/half_black"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fira_sans"
                            android:text="Beyond The Edge\nby Jasmine Doe"
                            android:textColor="@color/half_black"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fira_sans"
                            android:text="Spirit's voice\nby Johnathan Smith"
                            android:textColor="@color/half_black"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fira_sans"
                            android:text="City on The Edge "
                            android:textColor="@color/half_black"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fira_sans"
                            android:text="City on The Edge "
                            android:textColor="@color/half_black"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fira_sans"
                            android:text="City on The Edge  "
                            android:textColor="@color/half_black"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/star"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">

                        <RatingBar
                            style="@style/ratingbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:numStars="5"
                            android:rating="2.5"
                            android:stepSize="1.5"
                            tools:ignore="SpeakableTextPresentCheck"></RatingBar>

                        <RatingBar
                            style="@style/ratingbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:numStars="5"
                            android:rating="3.5"
                            android:stepSize="2.5"
                            tools:ignore="SpeakableTextPresentCheck"></RatingBar>

                        <RatingBar
                            style="@style/ratingbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:numStars="5"
                            android:rating="2.5"
                            android:stepSize="1.5"
                            tools:ignore="SpeakableTextPresentCheck"></RatingBar>

                        <RatingBar
                            style="@style/ratingbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:numStars="5"
                            android:rating="3.5"
                            android:stepSize="2.5"
                            tools:ignore="SpeakableTextPresentCheck"></RatingBar>

                        <RatingBar
                            style="@style/ratingbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:numStars="5"
                            android:rating="2.5"
                            android:stepSize="1.5"
                            tools:ignore="SpeakableTextPresentCheck"></RatingBar>

                        <RatingBar
                            style="@style/ratingbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:numStars="5"
                            android:rating="3.5"
                            android:stepSize="2.5"
                            tools:ignore="SpeakableTextPresentCheck"></RatingBar>


                    </LinearLayout>


                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>